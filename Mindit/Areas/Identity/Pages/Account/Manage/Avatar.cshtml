@page
@model Avatar
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Avatar;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            @{
                var avatarName = Model.AvatarString;
                if (avatarName == null)
                {
                    avatarName = "default user profile pic.png";
                }
            }
            <img style="width:20%;height:20%;" src="~/Images/UserPictures/@avatarName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="padding-top:10px;">
                @Html.TextBox("file", "", new {  type= "file"}) <br />
                <input type="submit" value="Upload" style="margin-top: 10px;" />
                @ViewBag.Message
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}